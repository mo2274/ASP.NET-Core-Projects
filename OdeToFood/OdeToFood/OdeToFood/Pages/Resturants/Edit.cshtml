@page
@model OdeToFood.Pages.Resturants.EditModel
@{
}


<form method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" placeholder="name" asp-for="resturant.Id">
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" placeholder="name" asp-for="resturant.Name">
        <span asp-validation-for="resturant.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Location">Location</label>
        <input type="text" class="form-control" placeholder="Location" asp-for="resturant.Location">
        <span asp-validation-for="resturant.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Cuisine"> Cuisine</label>
        <select class="form-control" id="Cuisine" asp-for="resturant.Coisine" asp-items="@Model.Cuisines">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
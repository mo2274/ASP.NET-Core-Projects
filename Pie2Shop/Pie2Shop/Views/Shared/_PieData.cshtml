@model Pie


<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="Alternate Text" />
        <div class="caption caption-full">
            <h3 class="float-end">
                @Model.Price.ToString("c")
            </h3>
            <h3>
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId" style="text-decoration: none"> @Model.Name </a>
            </h3>
            <p> @Model.ShortDescription </p>
        </div>
        <div class="addToCart">
            <p class="accordion-button">
                <a class="btn btn-outline-primary" 
                   asp-controller="ShoppingCart" 
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId"
                   > Add to cart</a>
            </p>
        </div>
    </div>
</div>



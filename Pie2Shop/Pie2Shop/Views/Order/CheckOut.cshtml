@model Order


<form asp-action="CheckOut" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="@Model.FirstName" class="form-label"> First Name</label>
        <input asp-for="@Model.FirstName" type="text" class="form-control">
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.LastName" class="form-label"> Last Name</label>
        <input asp-for="@Model.LastName" type="text" class="form-control">
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.AddressLine1" class="form-label"> Address Line 1</label>
        <input asp-for="@Model.AddressLine1" type="text" class="form-control">
        <span asp-validation-for="@Model.AddressLine1" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.AddressLine2" class="form-label"> Address Line 2</label>
        <input asp-for="@Model.AddressLine2" type="text" class="form-control">
        <span asp-validation-for="@Model.AddressLine2" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.ZipCode" class="form-label"> ZipCode </label>
        <input asp-for="@Model.ZipCode" type="text" class="form-control">
        <span asp-validation-for="@Model.ZipCode" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.City" class="form-label"> City</label>
        <input asp-for="@Model.City" type="text" class="form-control">
        <span asp-validation-for="@Model.City" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.State" class="form-label"> State </label>
        <input asp-for="@Model.State" type="text" class="form-control">
        <span asp-validation-for="@Model.State" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Country" class="form-label"> Country</label>
        <input asp-for="@Model.Country" type="text" class="form-control">
        <span asp-validation-for="@Model.Country" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.PhoneNo" class="form-label"> PhoneNo </label>
        <input asp-for="@Model.PhoneNo" type="text" class="form-control">
        <span asp-validation-for="@Model.PhoneNo" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="@Model.Email" class="form-label"> Email </label>
        <input asp-for="@Model.Email" type="text" class="form-control">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Check me out
            </label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">CheckOut</button>
    </div>
</form>